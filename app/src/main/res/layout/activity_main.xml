<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
            android:id="@+id/trip"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:onClick="express"
            android:text="行程助手" />

        <Button
            android:id="@+id/express"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/trip"
            android:textColor="@color/black"
            android:onClick="trip"
            android:text="快递助手" />

        <Button
            android:id="@+id/bookkeeping"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/express"
            android:textColor="@color/black"
            android:onClick="bookkeeping"
            android:text="记账助手" />

        <Button
            android:id="@+id/notify"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/bookkeeping"
            android:textColor="@color/black"
            android:onClick="notify"
            android:text="读取通知栏" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>